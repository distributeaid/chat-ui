{
  "name": "@distributeaid/chat-ui",
  "version": "0.0.0-development",
  "description": "Chat UI for the in-app chat",
  "scripts": {
    "build": "npx webpack --config-name production",
    "start": "webpack-dev-server --config-name development --open",
    "lint": "eslint --ext .js,.ts,.tsx src/**"
  },
  "keywords": [
    "Distribute Aid",
    "Chat"
  ],
  "author": "Distribute Aid | https://distributeaid.org/",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distributeaid/chat-ui.git"
  },
  "bugs": {
    "url": "https://github.com/distributeaid/chat-ui/issues"
  },
  "homepage": "https://github.com/distributeaid/chat-ui#readme",
  "devDependencies": {
    "@bifravst/code-style": "^6.0.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@svgr/webpack": "^5.1.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^4.4.2",
    "@types/twemoji": "^12.1.0",
    "@types/uuid": "^3.4.7",
    "handlebars": "^4.7.2",
    "husky": "^4.2.1",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "twilio-chat": "^3.3.4",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.20",
    "feather-icons": "^4.25.0",
    "fp-ts": "^2.4.3",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.1",
    "react": "^16.12.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.12.0",
    "react-feather": "^2.0.3",
    "styled-components": "^5.0.0",
    "uuid": "^3.4.0"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "/home/runner/work/chat-ui/chat-ui/dist/main.js",
              "name": "distribute-aid-chat-ui.${nextRelease.gitTag}.js",
              "label": "Chat UI Bundle"
            },
            {
              "path": "/home/runner/work/chat-ui/chat-ui/dist/chatbutton.js",
              "name": "distribute-aid-chat-button.${nextRelease.gitTag}.js",
              "label": "Chat Button"
            }
          ]
        }
      ]
    ]
  },
  "files": [
    "README.md",
    "dist",
    "web",
    "package-lock.json"
  ],
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  }
}
